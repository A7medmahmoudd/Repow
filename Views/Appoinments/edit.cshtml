@model Clinic.Models.ViewmodelAppointment

@{
    ViewData["Title"] = "edit";
}

<div>
    <a asp-action="Index"class="btn btn-close">Back to List</a>
</div>
<div>

</div>
<h1>edit</h1>

<h4>Appoinment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="edit" Method="post">
          
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="idPatinet" class="control-label"></label>
                <select asp-for="idPatinet" class ="form-control" asp-items="ViewBag.Patinett">

                    @foreach (var item in Model.patinets)
                    {
                            <option value="@item.PatientsId">@item.PatientName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                               <label asp-for="idDoctor" class="control-label"></label>
                <select asp-for="idDoctor" class="form-control" asp-items="ViewBag.doctorid">

                    @foreach (var item in Model.doctors)
                    {
                            <option value="@item.DoctorId">@item.DoctorName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" asp-action="detales" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
